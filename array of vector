#include<bits/stdc++.h>
using namespace std;

void printvec(vector<int>v){
for(int i=0;i<v.size();i++){
    cout<<v[i]<<" ";
}
cout<<endl;
}

int main(){

cout<<"how many array you want"<<" ";
int N;      \\ how many arrays you want 
cin>>N;
vector<int>v[N];
for(int i=0;i<N;i++){
        cout<<"enter the size of every array"<<endl;    \\ give array size 
        int n;
        cin>>n;
        for(int j=0; j<n;j++){
            int x;
            cin>>x;             \\taking the values of the given array size
            v[i].push_back(x);

        }

}
for(int i=0;i<N;i++){
    printvec(v[i]);

}

}




\\output is here


